<section class="container mt-5">

    <div class="row">
        <a href="/admin/add-products" class=" ms-auto w-25 mb-5 btn btn-success">Add Products</a>
    </div>

    <table class=" table text-center">
        <thead>
            <tr>
                <th scope="col ">SI.NO</th>
                <th scope="col">PRODUCT NAME</th>
                <th scope="col px-4">DESCRIPTION</th>
                <th scope="col">CATEGORY</th>
                <th scope="col">IMAGE</th>
            </tr>
        </thead>
        <tbody>

            {{#each products}}
            <tr>
                <td class="p-4">{{@index}}</td>
                <td class="p-4">{{this.name}}</td>
                <td class="p-4">{{this.description}}</td>
                <td class="p-4">{{this.category}}</td>
                <td class="p-4"><img style="width:50px;height:50px;" src="/product-images/{{this._id}}.png" alt=""></td>

            </tr>

            {{/each}}


        </tbody>
    </table>

</section>