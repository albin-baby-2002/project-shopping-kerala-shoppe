<form class="container w-50 mx-auto mt-5" action="/admin/add-products" method="POST" enctype="multipart/form-data">
    <div class="form-group my-3">
        <label class="my-2" for="userName">Name</label>
        <input type="text" class="form-control" id="userName" aria-describedby="name" placeholder="" name="name">

    </div>


    <div class="form-group my-3">
        <label class="my-2" for="category">Category</label>
        <input type="text" class="form-control" id="category" placeholder="" name="category">
    </div>

    <div class="form-group my-3">
        <label class="my-2" for="description">Description</label>
        <input type="text" class="form-control" id="description" placeholder="" name="description">
    </div>

    <div class="form-group my-3">
        <label class="my-2" for="price">Price</label>
        <input type="text" class="form-control" id="price" placeholder="" name="price">
    </div>



    <div class="form-group my-3">
        <label class="my-2" for="image">image</label>
        <input id="image" type="file" class="form-control" name="image">

    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>